<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/cig_id"
                    android:layout_width="174dp"
                    android:layout_height="138dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="44dp"
                    android:src="@drawable/plant_splash"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemname_id"
                    android:layout_width="146dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:text="Item Name"
                    android:paddingTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.392"
                    app:layout_constraintStart_toEndOf="@+id/cig_id"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemprice_id"
                    android:layout_width="145dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="Item Price"
                    app:layout_constraintEnd_toEndOf="@+id/itemname_id"
                    app:layout_constraintStart_toStartOf="@+id/itemname_id"
                    app:layout_constraintTop_toBottomOf="@+id/itemname_id" />

                <TextView
                    android:id="@+id/itemquantity_id"
                    android:layout_width="147dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="Item Quantity"
                    app:layout_constraintEnd_toEndOf="@+id/itemprice_id"
                    app:layout_constraintStart_toStartOf="@+id/itemprice_id"
                    app:layout_constraintTop_toBottomOf="@+id/itemprice_id" />

                <TextView
                    android:id="@+id/orderstatus_id"
                    android:layout_width="95dp"
                    android:layout_height="49dp"
                    android:layout_marginTop="8dp"
                    android:text="Order status"
                    app:layout_constraintEnd_toEndOf="@+id/itemquantity_id"
                    app:layout_constraintHorizontal_bias="0.018"
                    app:layout_constraintStart_toStartOf="@+id/itemquantity_id"
                    app:layout_constraintTop_toBottomOf="@+id/itemquantity_id" />

                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Order Id"
                    android:textAlignment="center"
                    app:layout_constraintTop_toBottomOf="@+id/orderstatus_id"
                    tools:layout_editor_absoluteX="4dp" />

                <ImageView
                    android:id="@+id/info_id"
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:src="@drawable/info"
                    app:layout_constraintEnd_toEndOf="@+id/itemquantity_id"
                    app:layout_constraintTop_toTopOf="@+id/orderstatus_id" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>