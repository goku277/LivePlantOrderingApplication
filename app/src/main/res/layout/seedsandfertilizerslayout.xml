<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="11dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <!--    <ImageView
                android:id="@+id/cig_id"
                android:layout_width="94dp"
                android:layout_height="108dp"
                android:src="@drawable/profile"
                app:layout_constraintBottom_toTopOf="@+id/add_to_cart_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.362" />   -->

            <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/cig_id"
                android:layout_width="109dp"
                android:layout_height="114dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toTopOf="@+id/add_to_cart_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.129" />

            <TextView
                android:id="@+id/name_id"
                android:layout_width="174dp"
                android:layout_height="49dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.823"
                app:layout_constraintStart_toEndOf="@+id/cig_id"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/price_id"
                android:layout_width="174dp"
                android:layout_height="39dp"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/name_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/name_id"
                app:layout_constraintTop_toBottomOf="@+id/name_id" />

            <TextView
                android:id="@+id/seeds_qty_id"
                android:layout_width="174dp"
                android:layout_height="58dp"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/price_id"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/price_id"
                app:layout_constraintTop_toBottomOf="@+id/price_id" />

            <TextView
                android:id="@+id/details_id"
                android:layout_width="172dp"
                android:layout_height="83dp"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/seeds_qty_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/seeds_qty_id"
                app:layout_constraintTop_toBottomOf="@+id/seeds_qty_id" />

            <TextView
                android:id="@+id/category_id"
                android:layout_width="173dp"
                android:layout_height="61dp"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/details_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/details_id"
                app:layout_constraintTop_toBottomOf="@+id/details_id" />

            <TextView
                android:id="@+id/quantity_id"
                android:layout_width="172dp"
                android:layout_height="56dp"
                android:textColor="#000"
                app:layout_constraintEnd_toEndOf="@+id/category_id"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/category_id"
                app:layout_constraintTop_toBottomOf="@+id/category_id" />

    <Button
        android:id="@+id/add_to_cart_id"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_buttons"
        android:text="Add To Cart"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/quantity_id"
        tools:layout_editor_absoluteX="6dp" />

    <Button
        android:id="@+id/order_id"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_buttons"
        android:text="Order"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/add_to_cart_id"
        tools:layout_editor_absoluteX="1dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/goback_id"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@+id/order_id"
                android:text="Back"
                android:textColor="#ffffff"
                android:background="@drawable/rounded_buttons"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>