<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="25dp">

                    <ImageView
                        android:id="@+id/cig_id"
                        android:layout_width="267dp"
                        android:layout_height="144dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/p2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/name_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingTop="12dp"
                        android:text="Name"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/cig_id"
                        tools:layout_editor_absoluteX="16dp" />

                    <TextView
                        android:id="@+id/price_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Price"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/name_id" />

                    <ScrollView
                        android:id="@+id/scrollView3"
                        android:layout_width="321dp"
                        android:layout_height="65dp"
                        app:layout_constraintEnd_toEndOf="@+id/price_id"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/price_id">

                        <TextView
                            android:id="@+id/detail_id"
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:layout_marginTop="16dp"
                            android:text="Details"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="@+id/price_id"
                            app:layout_constraintStart_toStartOf="@+id/price_id"
                            app:layout_constraintTop_toBottomOf="@+id/price_id" />

                    </ScrollView>

                    <Button
                        android:id="@+id/add_to_cart_id"
                        android:layout_width="316dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/rounded_buttons"
                        android:text="Add To Cart"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        app:layout_constraintEnd_toEndOf="@+id/scrollView3"
                        app:layout_constraintStart_toStartOf="@+id/scrollView3"
                        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

                    <Button
                        android:id="@+id/back_btn_id"
                        android:layout_width="327dp"
                        android:layout_height="21dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_buttons"
                        android:text="Back"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/scrollView3"
                        app:layout_constraintTop_toBottomOf="@+id/add_to_cart_id" />

                    <TextView
                        android:id="@+id/empty_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/back_btn_id"
                        tools:layout_editor_absoluteX="34dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>