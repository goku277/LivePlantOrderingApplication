<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="2dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_id"
                android:layout_width="306dp"
                android:layout_height="129dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/summer_plants"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_id"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/img_id"
                android:text="Name"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/price_id"
                android:textAlignment="center"
                android:text="Price"
                app:layout_constraintTop_toBottomOf="@+id/name_id"
                android:layout_marginTop="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detail_id"
                android:text="Detail"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/price_id"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/detail_id"
                android:layout_marginTop="12dp"
                android:id="@+id/empty_text_id"
                android:textAlignment="center"/>


            <ImageView
                android:id="@+id/back_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/back"
                app:layout_constraintEnd_toEndOf="@+id/add_to_cart_id"
                app:layout_constraintTop_toBottomOf="@+id/empty_text_id" />

            <Button
                android:id="@+id/add_to_cart_id"
                android:layout_width="277dp"
                android:layout_height="20dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/rounded_buttons"
                android:text="Add To Cart"
                android:textAlignment="center"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/empty_text_id"
                app:layout_constraintStart_toStartOf="@+id/empty_text_id"
                app:layout_constraintTop_toBottomOf="@+id/empty_text_id" />

            <Button
                android:id="@+id/order_id"
                android:layout_width="276dp"
                android:layout_height="18dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_buttons"
                android:text="Order"
                android:textAlignment="center"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/add_to_cart_id"
                app:layout_constraintStart_toStartOf="@+id/add_to_cart_id"
                app:layout_constraintTop_toBottomOf="@+id/add_to_cart_id" />

            <Button
                android:id="@+id/add_to_wishlist_id"
                android:layout_width="274dp"
                android:layout_height="22dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_buttons"
                android:text="Add To Wish List"
                android:textAlignment="center"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="@+id/order_id"
                app:layout_constraintStart_toStartOf="@+id/order_id"
                app:layout_constraintTop_toBottomOf="@+id/order_id" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>