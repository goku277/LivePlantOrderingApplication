<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="7dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <TextView
                android:id="@+id/username_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usermobile_id"
                android:layout_marginTop="12dp"
                android:text="User Mobile"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/username_id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemname_id"
                android:layout_marginTop="12dp"
                android:text="Item Name"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/usermobile_id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemprice_id"
                android:layout_marginTop="12dp"
                android:text="Item Price"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/itemname_id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/itemquantity_id"
                android:text="Item Quantity"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/itemprice_id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/paymentstatus_id"
                android:text="Payment Status"
                android:textAlignment="center"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/itemquantity_id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/quantity_id"
                android:layout_marginTop="12dp"
                android:text="Quantity"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/paymentstatus_id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_id"
                android:layout_marginTop="12dp"
                android:text="Id"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/quantity_id" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/id_id"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:id="@+id/product_id"
                android:text="Product Id"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:id="@+id/empty_id"
                app:layout_constraintTop_toBottomOf="@+id/product_id"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>